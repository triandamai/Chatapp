<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:id="@+id/parent_item_parent"
     android:layout_width="match_parent"
     android:layout_marginTop="5dp"
     android:elevation="3dp"
     app:cardElevation="10dp"
     android:clickable="true"
     android:background="?selectableItemBackground"
     android:layout_marginEnd="3dp"
     android:layout_marginStart="3dp"
     android:layout_height="wrap_content">

  <LinearLayout
       android:id="@+id/parent_item"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginEnd="15dp"
       android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/iv_user"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_margin="10dp"
         android:layout_gravity="center"
         android:src="@drawable/undraw_jason_mask_t07o"

         />

    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:layout_margin="10dp"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
           android:id="@+id/tv_nama"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:maxLength="30"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:maxLines="1"
           android:text="Nama Users" />
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <ProgressBar
             android:visibility="gone"
             android:id="@+id/progress_add"
             android:layout_width="30dp"
             android:layout_height="30dp"/>

        <TextView
             android:visibility="gone"
             android:id="@+id/txt_detail_progress"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:layout_gravity="center"/>
      </LinearLayout>

    </LinearLayout>
    <ImageView
         android:id="@+id/btn_add"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:scaleType="center"
         android:layout_gravity="center"
         android:clickable="true"
         android:background="?selectableItemBackground"
         android:src="@drawable/ic_btn_addperson"/>
    <ImageView
         android:id="@+id/btn_menu"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_gravity="center"
         android:clickable="true"
         android:scaleType="center"
         android:background="?selectableItemBackground"
         android:src="@drawable/ic_more"
         />
  </LinearLayout>
</android.support.v7.widget.CardView>