<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_message_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message_sent_chip"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_message_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/placeholder"
        android:visibility="gone"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_size_small" />
    <TextView
        android:id="@+id/item_message_body_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/simple_padding_tiny"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/simple_padding_medium"
        android:layout_marginTop="12dp"
        android:textAlignment="textStart"
        android:clickable="true"
        android:longClickable="true"
        android:padding="5dp"
        android:maxWidth="230dp"
        android:minWidth="100dp"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ffff"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="13dp"
            android:text=""
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingEnd="20dp"/>
        <ImageView
            android:id="@+id/iv_tick"
            android:layout_toRightOf="@+id/txt_message_date"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

</LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_thread"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"/>

</LinearLayout>