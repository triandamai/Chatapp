<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_message_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_thread"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_received_chip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_message_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:text="@string/placeholder"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_message_body_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_padding_tiny"
            android:layout_marginLeft="@dimen/simple_padding_medium"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/simple_padding_tiny"
            android:clickable="true"
            android:longClickable="true"
            android:padding="@dimen/simple_padding_medium"
            android:paddingEnd="@dimen/simple_padding_large"
            android:paddingStart="5dp"
            android:text=""
            android:maxWidth="230dp"
            android:textColor="#ffff"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:layout_marginEnd="9dp"
            android:paddingLeft="14dp"
            android:layout_marginBottom="4dp"
            android:textSize="12sp"
            android:layout_gravity="left" />
    </LinearLayout>



</LinearLayout>